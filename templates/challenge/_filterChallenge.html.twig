<div class="container mt-3 d-flex">
    {{ form_start(form, {attr: {'autocomplete': 'off'}}) }}
    <div class="row flex justify-content-center">
        <div class="form-group col-lg-5 col-md-012 col-sm-12 col-12">
            <div class="row">
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-6 input-filter">
                    {{ form_row(form.dateStart) }}
                </div>
                <div class="form-group col-lg-6 col-md-6 col-sm-6 col-6" style="width: 250px;">
                    {{ form_row(form.sport) }}
                </div>
            </div>
        </div>
        <div class="form-group col-lg-3 col-md-06 col-sm-6 col-6">
            {{ form_row(form.distance, {'attr': {'id': 'distance'} }) }}
            <div id="sliderDistance" data-min="{{ minMaxDistance[0]['minDistance'] }}"
                 data-max="{{ minMaxDistance[0]['maxDistance'] }}"></div>
        </div>
        <div class="form-group col-lg-3 col-md-6 col-sm-6 col-6">
            {{ form_row(form.participants, {'attr': {'id': 'participants'} }) }}
            <div id="sliderParticipants" data-min="{{ min }}" data-max="{{ max }}"></div>
        </div>
        <div class="form-group col-lg-1 col-md-12 col-sm-12 col-12">
            <button class="btn btn-primary mt-0">Rechercher</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
