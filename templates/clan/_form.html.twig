<div class="container top-20-vh">
    <div class="form-group">
        <p> Les champs avec * sont obligatoires.</p>
    </div>
    {{ form_start(form, {'attr': {'class': 'form-kyosc'} }) }}
    <div class="form-row">
        <div class="form-group col-md-12 ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.description, {'attr': {'size': 8} }) }}
            {{ form_widget(form.description) }}
            {{ form_help(form.description) }}
        </div>
    </div>
    <div class="row mb-4">
        <div class="fileUpload col-lg-8 align-self-end">
            {{ form_errors(form.bannerFile) }}
            {{ form_widget(form.bannerFile) }}
            <div class="transparent-background-light py-1 px-3">
                {{ form_help(form.bannerFile) }}
            </div>
        </div>
    </div>
    <div class="form-row justify-content-between">
        <div class="form-group ">
            {{ form_errors(form.isPublic) }}
            {{ form_widget(form.isPublic) }}
            <div class="transparent-background-light py-1 px-3">
                {{ form_help(form.isPublic) }}
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn-login btn btn-lg">Enregistrer</button>
        {{ form_end(form) }}
    </div>
</div>
