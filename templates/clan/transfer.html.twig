{% extends 'base.html.twig' %}

{% block title %}Transferez votre clan{% endblock %}

{% block background %}
    class="background-profile" style="background: url('{{ asset('build/images/background/bgimg' ~ random(1, 11) ~ '.jpeg') }}') no-repeat fixed center; background-size: cover;"
{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <header class="arrow-header my-3 text-uppercase">
        <h1 class="mt-2">Transferez votre clan</h1>
    </header>
    <div class="top-20-vh w-100">
        <div class="form-group d-flex ml-4">
            <p class="transparent-background-dark p-2"> Les champs avec <span class="mb-0 mandatory text-kred">*</span> sont obligatoires.</p>
        </div>
        <div class="background-grey big-padding">
            {{ form_start(form, {'attr': {'class': 'form-kyosc'} }) }}
            <div class="form-row">
                <div class="form-group col-md-12 ">
                    <p class="mb-0"><span class="mandatory">*</span> Nom de votre clan:</p>
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 ">
                    <p class="mb-0"><span class="mandatory">*</span>Vers qui en transférer la propriété :</p>
                    {{ form_errors(form.creator) }}
                    {{ form_widget(form.creator) }}
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn-login btn btn-lg">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/js/select2.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.select2').select2();
        });
    </script>
{% endblock %}
