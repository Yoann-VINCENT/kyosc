{% extends 'base.html.twig' %}

{% block title %}Clan index{% endblock %}

{% block body %}
    <h1>Clan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Logo</th>
                <th>Banner</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clan in clans %}
            <tr>
                <td>{{ clan.id }}</td>
                <td>{{ clan.name }}</td>
                <td>{{ clan.logo }}</td>
                <td>{{ clan.banner }}</td>
                <td>{{ clan.description }}</td>
                <td>
                    <a href="{{ path('clan_show', {'id': clan.id}) }}">show</a>
                    <a href="{{ path('clan_edit', {'id': clan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clan_new') }}">Create new</a>
{% endblock %}
