{% extends 'base.html.twig' %}
{% block title%} Modifier mon mail {% endblock %}
{% block body %}
<header class="arrow-header my-3 text-uppercase">
    <h1 class="mt-2">Modifier mon mail</h1>
</header>
<div class="container">
    {{ form_start(form, {'attr': {'class': 'form-kyosc'} }) }}
    <div class="form-group d-flex flex-column mt-4">
        <div class="form-group col-12 col-lg-6 align-self-center">
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group col-12 col-lg-6 align-self-center">
            <label for="exampleInputPassword1"></label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Mot de passe">
        </div>
        {% if error is not empty %}
            <div class="form-group error-message">
                {{ error.password }}
            </div>
        {% endif %}
        <div class="form-group d-flex flex-column">
            <div class="container d-flex flex-column mt-3">
                <button type="submit" class="btn-login btn btn-lg col-4 col-lg-2 mb-4 align-self-center">Valider</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
